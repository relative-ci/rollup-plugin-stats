{
  "name": "rollup-plugin-stats",
  "description": "Vite/Rolldown/Rollup plugin to generate bundle stats JSON file",
  "version": "1.5.6",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/relative-ci/rollup-plugin-stats.git"
  },
  "bugs": {
    "url": "https://github.com/relative-ci/rollup-plugin-stats/issues"
  },
  "author": {
    "name": "Viorel Cojocaru",
    "email": "vio@relative-ci.com",
    "url": "https://relative-ci.com"
  },
  "keywords": [
    "vite",
    "rolldown",
    "rollup",
    "vite-plugin",
    "rolldown-plugin",
    "rollup-plugin",
    "bundle-stats"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./extract": {
      "import": {
        "types": "./dist/extract.d.mts",
        "default": "./dist/extract.mjs"
      },
      "require": {
        "types": "./dist/extract.d.cts",
        "default": "./dist/extract.cjs"
      }
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npm run clean && npm run type-check && tsdown",
    "clean": "rimraf ./dist",
    "type-check": "tsc",
    "lint": "eslint",
    "format": "prettier --write .",
    "test:unit": "vitest test/unit",
    "test:package": "npm run test:package:rolldown && npm run test:package:rollup && npm run test:package:vite",
    "test:package:rolldown": "cd test/package/rolldown && npm run test",
    "test:package:rollup": "cd test/package/rollup && npm run test",
    "test:package:vite": "cd test/package/vite && npm run test",
    "bump": "./scripts/bump.sh",
    "release": "./scripts/release.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@release-it/conventional-changelog": "10.0.5",
    "@types/deep-freeze-strict": "1.1.2",
    "@types/node": "25.2.1",
    "deep-freeze-strict": "1.1.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "memfs": "4.56.10",
    "prettier": "3.8.1",
    "release-it": "19.2.4",
    "rimraf": "6.0.1",
    "rollup": "4.57.1",
    "tsdown": "0.20.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "rolldown": "^1.0.0-beta.0",
    "rollup": "^3.0.0 || ^4.0.0",
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "rolldown": {
      "optional": true
    },
    "rollup": {
      "optional": true
    }
  }
}
