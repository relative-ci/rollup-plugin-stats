{
  "name": "rollup-plugin-stats",
  "description": "Output Rollup stats",
  "version": "1.0.0",
  "license": "MIT",
  "private": false,
  "author": {
    "name": "Viorel Cojocaru",
    "email": "vio@beanon.com",
    "url": "https://beanon.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vio/rollup-plugin-stats.git"
  },
  "keywords": [
    "rollup",
    "plugin",
    "stats"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.m:wjsjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:unit": "vitest test/unit",
    "test:package": "vitest test/package",
    "bump": "./scripts/bump.sh",
    "release": "./scripts/release.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run lint"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@release-it/conventional-changelog": "9.0.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tsconfig/node18": "^18.2.4",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^8.0.3",
    "memfs": "^4.15.1",
    "prettier": "^3.4.2",
    "release-it": "17.10.0",
    "rollup": "^4.29.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
