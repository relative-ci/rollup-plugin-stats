{
  "name": "rollup-plugin-stats",
  "description": "Output Rollup stats",
  "version": "1.6.0-beta.1",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/relative-ci/rollup-plugin-stats.git"
  },
  "bugs": {
    "url": "https://github.com/relative-ci/rollup-plugin-stats/issues"
  },
  "author": {
    "name": "Viorel Cojocaru",
    "email": "vio@relative-ci.com",
    "url": "https://relative-ci.com"
  },
  "keywords": [
    "vite",
    "rollup",
    "rolldown",
    "plugin",
    "stats",
    "bundle-stats"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.cts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./extract": {
      "import": {
        "types": "./dist/extract.d.mts",
        "default": "./dist/extract.mjs"
      },
      "require": {
        "types": "./dist/extract.d.cts",
        "default": "./dist/extract.cjs"
      }
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npm run type-check && tsdown",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:unit": "vitest test/unit",
    "test:package": "npm run test:package:rolldown && npm run test:package:rollup && npm run test:package:vite",
    "test:package:rolldown": "vitest test/package/rolldown",
    "test:package:rollup": "vitest test/package/rollup",
    "test:package:vite": "vitest test/package/vite",
    "type-check": "tsc",
    "bump": "./scripts/bump.sh",
    "release": "./scripts/release.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run lint"
    }
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@release-it/conventional-changelog": "10.0.4",
    "@types/deep-freeze-strict": "1.1.2",
    "@types/node": "25.0.3",
    "deep-freeze-strict": "1.1.1",
    "eslint": "9.39.2",
    "globals": "17.0.0",
    "husky": "8.0.3",
    "memfs": "4.51.1",
    "prettier": "3.7.4",
    "release-it": "19.2.2",
    "tsdown": "0.18.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.51.0",
    "vitest": "4.0.16"
  },
  "peerDependencies": {
    "rolldown": "^1.0.0-beta.0",
    "rollup": "^3.0.0 || ^4.0.0",
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "rolldown": {
      "optional": true
    },
    "rollup": {
      "optional": true
    }
  }
}
