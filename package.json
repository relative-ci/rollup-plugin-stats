{
  "name": "rollup-plugin-stats",
  "description": "Output Rollup stats",
  "version": "1.3.1",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/relative-ci/rollup-plugin-stats.git"
  },
  "bugs": {
    "url": "https://github.com/relative-ci/rollup-plugin-stats/issues"
  },
  "author": {
    "name": "Viorel Cojocaru",
    "email": "vio@relative-ci.com",
    "url": "https://relative-ci.com"
  },
  "keywords": [
    "rollup",
    "plugin",
    "stats"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./extract": {
      "import": "./dist/extract.mjs",
      "require": "./dist/extract.cjs",
      "types": "./dist/extract.d.ts"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:unit": "vitest test/unit",
    "test:package": "vitest test/package",
    "bump": "./scripts/bump.sh",
    "release": "./scripts/release.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run lint"
    }
  },
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "@release-it/conventional-changelog": "10.0.0",
    "@rollup/plugin-typescript": "12.1.2",
    "@tsconfig/node18": "18.2.4",
    "@types/lodash": "4.17.14",
    "@types/node": "22.12.0",
    "dotenv": "16.4.7",
    "eslint": "9.19.0",
    "globals": "15.14.0",
    "husky": "8.0.3",
    "memfs": "4.17.0",
    "prettier": "3.4.2",
    "release-it": "18.1.2",
    "rollup": "4.32.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.22.0",
    "vitest": "3.0.4"
  },
  "peerDependencies": {
    "rollup": "^3.0.0 || ^4.0.0"
  }
}
